<body>
    
    <%-include('partials/navbar') %>

    
    


    <!-- Hero Section -->
    <section class="hero bg-light text-center text-white" >
        <div class="container py-5 text-start"> <!-- Cambiado text-center a text-start -->
            <h1 class="display-4" style="font-weight: bold;">NextMovie</h1>
            <p class="lead"> Recibe información de tus películas favoritas, duración, año de estreno, categorias, sinopsis.</p>
        </div>
    </section>

    <br/>
    
    <section id="catalogo" class="peliculas">
